@model Gore.Application.ViewModels.BloodTypeViewModel

@{
    ViewData["Title"] = "Editar Tipos sanguineo!";
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <input type="hidden" asp-for="BloodTypeId" />
        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />
        <div class="form-group">
            <label asp-for="BloodTypeDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BloodTypeDescription" class="form-control" />
                <span asp-validation-for="BloodTypeDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}